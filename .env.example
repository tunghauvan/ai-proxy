# Ollama Configuration
OLLAMA_API_KEY=your_ollama_api_key_here
OLLAMA_API_BASE_URL=https://ollama.com
OLLAMA_API_MODEL=gpt-oss:20b-cloud

# LangSmith Configuration for monitoring and tracing
LANGSMITH_PROJECT=your_project_name
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_TRACING=true

# RAG Configuration (OpenAI for embeddings)
RAG_EMBEDDING_ENGINE=openai
RAG_OPENAI_API_BASE_URL=https://api.openai.com/v1
RAG_OPENAI_API_KEY=your_openai_api_key
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_RERANKING_MODEL=bge-reranker-v2-m3

# Database Configuration
DATABASE_URL=postgresql+asyncpg://langchain:langchain_secret@postgres:5432/langchain_proxy
DATABASE_URL_SYNC=postgresql://langchain:langchain_secret@postgres:5432/langchain_proxy

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Logging
LOG_LEVEL=INFO